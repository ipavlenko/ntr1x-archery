{% extends 'NTR1XLayoutBundle:private-domains-list.html.twig' %}

{% block editor %}

	<form enctype="multipart/form-data" id="form-create" method="POST"
		action="{{ path('admin-layout-domains-do-create') }}"
	>
		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-12">
					<h1>Новый источник</h1>
				</div>
				<div class="col-xs-12 col-md-6">
					<div class="form-group">
						<label for="form-create-name">Имя</label>
						<input class="form-control" type="text" id="form-create-name" name="name" required="true" value="{{ form.inputData['$.request.name']|e }}" />
					</div>
					<div class="form-group">
						<label for="form-create-spec">Схема</label>
						<select class="form-control" id="form-create-spec" name="spec" required="true">
						{% for s in specs %}
							<option value="{{ s.id }}" {{ form.inputData['$.request.spec'] == s.id ? 'selected="selected"' : ''}}>{{ s.name|e }} {{ s.url|e }}</option>
						{% endfor %}
						</select>
					</div>
					<div class="form-group">
						<label for="form-create-name">Имя</label>
						<input class="form-control" type="text" id="form-create-name" name="name" required="true" value="{{ form.inputData['$.request.name']|e }}" />
					</div>
					<div class="form-group">
						<label for="form-create-name">Схема</label>
						<input class="form-control" type="text" id="form-create-name" name="name" required="true" value="{{ form.inputData['$.request.name']|e }}" />
					</div>
					<section>
						<nav class="navbar">
							<input type="submit" class="btn btn-primary navbar-btn" value="Добавить" />
						</nav>
					</section>
				</div>
			</div>
		<div>

	</form>

{% endblock %}