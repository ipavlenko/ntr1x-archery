{% extends 'NTR1XLayoutBundle:private-pages-update.html.twig' %}

{% block editor %}

	<form enctype="multipart/form-data" id="form-update" method="POST"
		action="{{ path('admin-layout-pages-metas-do-update') }}"
		data-vue
	>

		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-12">
					<h1>Мета-информация</h1>
				</div>
				<div class="col-xs-12 col-md-6">

					<input type="hidden" name="id" value="{{ page.id }}" />

					<section>
						<table is="grid-table" inline-template class="table table-inline" :d="{{ page.metas | serialize('json') }}">
							<thead>
							<tr>
								<th style="width: 20%">Имя</th>
								<th style="width: 60%">Значение</th>
								<th><a class="btn btn-xs btn-primary" v-on:click="add">Добавить</a></th>
							</tr>
							</thead>
							<tbody>
								<tr v-for="item in items">
									<td><inline-text :name="'metas[' + $index + '][name]'" :value="item.name"></inline-text></td>
									<td><inline-text :name="'metas[' + $index + '][content]'" :value="item.content" /></inline-text></td>
									<td><a class="btn btn-xs btn-danger" v-on:click="remove($index)">Удалить</a></td>
								</tr>
							</tbody>
						</table>

					</section>

					<section>
						<nav class="navbar">
							<button type="submit" class="btn btn-primary navbar-btn"
							>Сохранить</button>
						</nav>
					</section>

				</div>
			</div>
		</div>

	</form>

{% endblock %}