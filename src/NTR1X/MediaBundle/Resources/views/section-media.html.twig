<section class="widget-media">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-3">
				<div class="media-navs">
					<h2>{{ category.title }}</h2>
					<ul class="nav nav-pills nav-stacked">
						{% for item in items %}
							<li class="{{ loop.index == 1 ? 'active' : '' }}"><a data-toggle="tab" href="#{{ sid }}-{{ category.id }}-{{ item.id }}">{{ item.title|e }}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div>
			<div class="col-xs-6">
				<div class="tab-content media-details">
				{% for item in items %}
					<div class="tab-pane {{ loop.index == 1 ? 'active' : '' }}" id="{{ sid }}-{{ category.id }}-{{ item.id }}">
						{% if item.thumbnail != null %}
							<img src="{{ asset(item.thumbnail.webPath) }}" border="0" width="100%" />
						{% elseif item.video is not empty %}
							<iframe src="{{ asset(item.video|video('video')) }}" width="100%" height="300" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
						{% endif %}
						<h3 class="details-title"><a href="/media/i/{{ item.id }}">{{ item.title|e }}</a></h3>
						<div class="details-socials">
							<div class="socials">
								<a class="social fb" href="#"></a>
								<a class="social vk" href="#"></a>
								<a class="social tw" href="#"></a>
							</div>
						</div>
						<div class="details-promo">{{ item.promo|raw }}</div>
					<div class="details-tags">
							<div class="tags">
								{% if item.published is defined %}
									<a class="tag date" href="{{ path('media', { d: item.published|date('Y-m-d'), c: category.name }) }}">{{ item.published|date("d.m.Y") }}</a>
								{% endif %}
								{% for t in item.tags %}
									<a class="tag" href="{{ path('media', { t: t.name, c: category.name }) }}">{{ t.name|e }}</a>
								{% endfor %}
							</div>
						</div>
					</div>
				{% endfor %}
				</div>
			</div>
			<div class="col-xs-3">
				<div class="media-tags">
					<div class="tags">
						{% for t in tags %}
							<a class="tag" href="{{ path('media', { t: t.name, c: category.name }) }}">{{ t.name|e }}</a>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>